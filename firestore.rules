rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{messageId} {
      allow read, delete: if false;
      // Only write is allowed
      allow write: if request.auth != null && request.resource.data.uid != null && request.resource.data.uid == request.auth.uid && request.resource.data.token != null && request.resource.data.token == (messageId);
    }
    match /users/{document=**} {
      allow read, write, delete, update, list: if true;
    }
  }
}